<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter">
		<field
			name="search"
			type="text"
			label="COM_QAZAP_ITEMS_SEARCH_FILTER"
			hint="JSEARCH_FILTER"
			class="js-stools-search-string"
		/>
		<field
			name="state"
			type="list"
			label="COM_QAZAP_FILTER_PUBLISHED"
			description="COM_CQAZAP_FILTER_PUBLISHED_DESC"
			onchange="this.form.submit();"
			>
			<option value="*">JOPTION_SELECT_PUBLISHED</option>
			<option value="1">COM_QAZAP_FILTER_PUBLISHED</option>
			<option value="0">COM_QAZAP_FILTER_UNPUBLISHED</option>
			<option value="-2">COM_QAZAP_FILTER_TRASH</option>
		</field>
	</fields>
	<fields name="list">
		<field
			name="fullordering"
			type="list"
			label="JGLOBAL_SORT_BY"
			description="JGLOBAL_SORT_BY"
			onchange="this.form.submit();"
			default="a.ordering ASC"
			>
			<option value="">JGLOBAL_SORT_BY</option>
			<option value="a.id ASC">COM_QAZAP_REVIEWS_ID_ASCENDING</option>
			<option value="a.id DESC">COM_QAZAP_REVIEWS_ID_DESCENDING</option>
			<option value="a.rating ASC">COM_QAZAP_REVIEWS_RATING_ASCENDING</option>
			<option value="a.rating DESC">COM_QAZAP_REVIEWS_RATING_DESCENDING</option>
			<option value="pdd.product_name ASC">COM_QAZAP_REVIEWS_PRODUCT_NAME_ASCENDING</option>
			<option value="pdd.product_name DESC">COM_QAZAP_REVIEWS_PRODUCT_NAME_DESCENDING</option>
			<option value="a.comment ASC">COM_QAZAP_REVIEWS_COMMENT_ASCENDING</option>
			<option value="a.comment DESC">COM_QAZAP_REVIEWS_COMMENT_DESCENDING</option>
			<option value="done_by.name ASC">COM_QAZAP_REVIEWS_CREATED_BY_ASCENDING</option>
			<option value="done_by.name DESC">COM_QAZAP_REVIEWS_CREATED_BY_DESCENDING</option>
			<option value="a.state ASC">COM_QAZAP_REVIEWS_STATE_ASCENDING</option>
			<option value="a.state DESC">COM_QAZAP_REVIEWS_STATE_DESCENDING</option>
			<option value="a.ordering ASC">COM_QAZAP_REVIEWS_ORDERING_ASCENDING</option>
			<option value="a.ordering DESC">COM_QAZAP_REVIEWS_ORDERING_DESCENDING</option>
			
								
			
		</field>
		<field
			name="limit"
			type="limitbox"
			class="inputbox input-mini"
			default="25"
			label="COM_CATEGORIES_LIST_LIMIT"
			description="COM_CATEGORIES_LIST_LIMIT_DESC"
			format="%Y-%m-%d %H:%M:%S"
			onchange="this.form.submit();"
		/>
	</fields>
</form>
