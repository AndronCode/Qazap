<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>

		<field 
			name="shop_id" 
			type="hidden"
			default="0"
			label="COM_QAZAP_FORM_LBL_SHOP_ID"
			filter="unset"/> 
			
		<field 
			name="lang" 
			type="hidden"
			default="*"
			label="COM_QAZAP_FORM_LBL_SHOP_LANGUAGE" /> 			

		<field
			name="name" 
			type="text"
			class="input-xxlarge input-large-text"
			label="COM_QAZAP_FORM_LBL_SHOP_NAME"
			description="COM_QAZAP_FORM_DESC_SHOP_NAME"
			required="true"/> 

		<field 
			name="company" 
			type="text"
			label="COM_QAZAP_FORM_LBL_COMPANY_NAME"
			description="COM_QAZAP_FORM_DESC_COMPANY_NAME" /> 

		<field 
			name="contact_person" 
			type="text"
			label="COM_QAZAP_FORM_LBL_CONTACT_PERSON"
			description="COM_QAZAP_FORM_DESC_CONTACT_PERSON" /> 

		<field 
			name="address_1" 
			type="text"
			label="COM_QAZAP_FORM_LBL_ADDRESS1"
			description="COM_QAZAP_FORM_DESC_ADDRESS1" /> 

		<field 
			name="address_2" 
			type="text"
			label="COM_QAZAP_FORM_LBL_ADDRESS2"
			description="COM_QAZAP_FORM_DESC_ADDRESS2" />

		<field 
			name="city" 
			type="text"
			label="COM_QAZAP_FORM_LBL_CITY"
			description="COM_QAZAP_FORM_CITY" />

		<field 
			name="state" 
			type="qazapstates"
			label="COM_QAZAP_FORM_LBL_STATE"
			description="COM_QAZAP_FORM_DESC_STATE"/>

		<field 
			name="country" 
			type="qazapcountries"
			label="COM_QAZAP_FORM_LBL_COUNTRY"
			description="COM_QAZAP_FORM_DESC_COUNTRY" />
		
		<field 
			name="zip" 
			type="text"
			label="COM_QAZAP_FORM_LBL_ZIP"
			description="COM_QAZAP_FORM_DESC_ZIP"/>

		<field 
			name="phone_1" 
			type="text"
			label="COM_QAZAP_FORM_LBL_PHONE1"
			description="COM_QAZAP_FORM_DESC_PHONE1" />

		<field 
			name="phone_2" 
			type="text"
			label="COM_QAZAP_FORM_LBL_PHONE2"
			description="COM_QAZAP_FORM_DESC_PHONE2" />
		
		<field 
			name="fax" 
			type="text"
			label="COM_QAZAP_FORM_LBL_FAX"
			description="COM_QAZAP_FORM_DESC_FAX" />

		<field 
			name="mobile" 
			type="text"
			label="COM_QAZAP_FORM_LBL_MOBILE"
			description="COM_QAZAP_FORM_DESC_MOBILE" />	

		<field 
			name="vat" 
			type="text"
			label="COM_QAZAP_FORM_LBL_VAT"
			description="COM_QAZAP_FORM_DESC_VAT" />
			
		<field 
			name="additional_info" 
			type="textarea"
			class="span12"
			rows="6"
			columns="8"
			label="COM_QAZAP_FORM_LBL_ADDITIONAL_INFO"
			description="COM_QAZAP_FORM_DESC_ADDITIONAL_INFO" 
			filter="JComponentHelper::filterText" />			

		<field 
			name="tos" 
			type="editor"
			label="COM_QAZAP_FORM_LBL_TOS"
			description="COM_QAZAP_FORM_DESC_TOS"
			filter="JComponentHelper::filterText" />

		<field 
			name="description" 
			type="textarea"
			class="span12"
			rows="6"
			columns="8"
			label="COM_QAZAP_FORM_LBL_DESCRIPTION"
			description="COM_QAZAP_FORM_DESC_DESCRIPTION" 
			filter="JComponentHelper::filterText" />		
		
		<field
			name="modified_time"
			type="text"
			label="JGLOBAL_FIELD_MODIFIED_LABEL"
			class="readonly"
			filter="unset"
			readonly="true" />
		
		<field
			name="modified_by"
			type="user"
			label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
			class="readonly"
			readonly="true"
			filter="unset"/>		

	</fieldset>

</form>
