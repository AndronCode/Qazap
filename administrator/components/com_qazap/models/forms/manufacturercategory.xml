<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>

		<field 
			name="id" 
			type="text" 
			default="0"
			label="COM_QAZAP_FORM_LBL_MANUFACTURERCATEGORY_ID"
			readonly="true" 
			class="readonly"
			description="JGLOBAL_FIELD_ID_DESC" /> 

		<field 
			name="manufacturer_category_name"
			type="text" 
			required="required"
			label="COM_QAZAP_FORM_LBL_MANUFACTURERCATEGORY_MANUFACTURER_CATEGORY_NAME"
			description="COM_QAZAP_FORM_DESC_MANUFACTURERCATEGORY_MANUFACTURER_CATEGORY_NAME"
			class="input-xxlarge input-large-text"
			hint="Enter Category Name" 
			filter="text" /> 
		
		<field 
			name="alias"
			type="text" 
			label="COM_QAZAP_FORM_LBL_MANUFACTURER_CATEGORY_ALIAS"
			description="COM_QAZAP_FORM_DESC_MANUFACTURER_CATEGORY_ALIAS"
			hint="Enter Alias Name" 
			filter="text" /> 

		<field
			name="manufacturer_category_description"
			type="editor"
			label="COM_QAZAP_FORM_LBL_MANUFACTURERCATEGORY_MANUFACTURER_CATEGORY_DESCRIPTION"
			description="COM_QAZAP_FORM_DESC_MANUFACTURERCATEGORY_MANUFACTURER_CATEGORY_DESCRIPTION" 
			filter="JComponentHelper::filterText" /> 

		<field
			name="state"
			type="list"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC"
			class="chzn-color-state"
			size="1"
			default="1">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
		</field>
		
		<field
			name="checked_out"
			type="hidden"
			filter="unset"/>

		<field
			name="checked_out_time"
			type="hidden"
			filter="unset"/>
		
		<field 
			name="created_by" 
			type="user" 
			label="JGLOBAL_CREATED_BY_LABEL"
			description="JGLOBAL_CREATED_BY_DESC"/>
		
		<field
			name="created_time"
			type="text"
			label="JGLOBAL_CREATED_DATE"
			class="readonly"
			filter="unset"
			readonly="true" />
		
		<field
			name="modified_time"
			type="text"
			label="JGLOBAL_FIELD_MODIFIED_LABEL"
			class="readonly"
			filter="unset"
			readonly="true" />
		
		<field
			name="modified_by"
			type="user"
			label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
			class="readonly"
			readonly="true"
			filter="unset"/> 		

	</fieldset>

</form>
