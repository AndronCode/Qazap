<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter">
		<field
			name="search"
			type="text"
			label="COM_QAZAP_ITEMS_SEARCH_FILTER"
			hint="JSEARCH_FILTER"
			class="js-stools-search-string"
		/>
		<field
			name="state"
			type="list"
			label="COM_QAZAP_FILTER_PUBLISHED"
			description="COM_CQAZAP_FILTER_PUBLISHED_DESC"
			onchange="this.form.submit();"
			>
			<option value="*">JOPTION_SELECT_PUBLISHED</option>
			<option value="1">COM_QAZAP_FILTER_PUBLISHED</option>
			<option value="0">COM_QAZAP_FILTER_UNPUBLISHED</option>
			<option value="-2">COM_QAZAP_FILTER_TRASH</option>
			
		</field>
		<field
			name="required"
			type="list"
			label="COM_QAZAP_FILTER_REQUIRED"
			description="COM_CQAZAP_FILTER_REQUIRED_DESC"
			onchange="this.form.submit();"
			>
			<option value="*">JOPTION_SELECT_REQUIRED</option>
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</field>
		<field
			name="shipment_form"
			type="list"
			label="COM_QAZAP_FILTER_REQUIRED"
			description="COM_CQAZAP_FILTER_REQUIRED_DESC"
			onchange="this.form.submit();"
			>
			<option value="*">JOPTION_SELECT_SHOW_IN_SHIPMENT_FORM</option>
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</field>
		<field
			name="userbilling_form"
			type="list"
			label="COM_QAZAP_FILTER_REQUIRED"
			description="COM_CQAZAP_FILTER_REQUIRED_DESC"
			onchange="this.form.submit();"
			>
			<option value="*">JOPTION_SELECT_SHOW_IN_USERBILLING_FORM</option>
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</field>
	</fields>
	<fields name="list">
		<field
			name="fullordering"
			type="list"
			label="JGLOBAL_SORT_BY"
			description="JGLOBAL_SORT_BY"
			onchange="this.form.submit();"
			default="a.ordering ASC"
			>
			<option value="">JGLOBAL_SORT_BY</option>
			<option value="a.id ASC">COM_QAZAP_USERFIELDS_ID_ASCENDING</option>
			<option value="a.id DESC">COM_QAZAP_USERFIELDS_ID_DESCENDING</option>
			<option value="a.ordering ASC">COM_QAZAP_USERFIELDS_ORDERING_ASCENDING</option>
			<option value="a.ordering DESC">COM_QAZAP_USERFIELDS_ORDERING_DESCENDING</option>
			<option value="a.state ASC">COM_QAZAP_USERFIELDS_STATE_ASCENDING</option>
			<option value="a.state DESC">COM_QAZAP_USERFIELDS_STATE_DESCENDING</option>
			<option value="a.field_name ASC">COM_QAZAP_USERFIELDS_FIELD_NAME_ASCENDING</option>
			<option value="a.field_name DESC">COM_QAZAP_USERFIELDS_FIELD_NAME_DESCENDING</option>
			<option value="a.field_title ASC">COM_QAZAP_USERFIELDS_FIELD_TITLE_ASCENDING</option>
			<option value="a.field_title DESC">COM_QAZAP_USERFIELDS_FIELD_TITLE_DESCENDING</option>
			<option value="a.field_type ASC">COM_QAZAP_USERFIELDS_FIELD_TYPE_ASCENDING</option>
			<option value="a.field_type DESC">COM_QAZAP_USERFIELDS_FIELD_TYPE_DESCENDING</option>
			<option value="a.required ASC">COM_QAZAP_USERFIELDS_FIELD_REQUIRED_ASCENDING</option>
			<option value="a.required DESC">COM_QAZAP_USERFIELDS_FIELD_REQUIRED_DESCENDING</option>
			<option value="a.show_in_userbilling_form ASC">COM_QAZAP_USERFIELDS_DISPLAY_IN_USERBILLING_ASCENDING</option>
			<option value="a.show_in_userbilling_form DESC">COM_QAZAP_USERFIELDS_DISPLAY_IN_USERBILLING_DESCENDING</option>
			<option value="a.show_in_shipment_form ASC">COM_QAZAP_USERFIELDS_DISPLAY_IN_SHIPMENT_ASCENDING</option>
			<option value="a.show_in_shipment_form DESC">COM_QAZAP_USERFIELDS_DISPLAY_IN_SHIPMENT_DESCENDING</option>
		</field>
		<field
			name="limit"
			type="limitbox"
			class="inputbox input-mini"
			default="25"
			label="COM_CATEGORIES_LIST_LIMIT"
			description="COM_CATEGORIES_LIST_LIMIT_DESC"
			format="%Y-%m-%d %H:%M:%S"
			onchange="this.form.submit();"
		/>
	</fields>
</form>
