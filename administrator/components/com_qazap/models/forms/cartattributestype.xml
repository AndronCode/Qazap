<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>

		<field 
			name="id"
			type="text" 
			default="0" 
			label="COM_QAZAP_FORM_LBL_CARTATTRIBUTESTYPE_ID"
			readonly="true" 
			class="readonly"
			description="JGLOBAL_FIELD_ID_DESC" /> 

		<field 
			name="type" 
			type="cartattrtypes" 
			required="true" 
			readonly="yes"
			label="COM_QAZAP_FORM_LBL_CARTATTRIBUTESTYPE_TYPE"
			description="COM_QAZAP_FORM_DESC_CARTATTRIBUTESTYPE_TYPE"/>  

		<field 
			name="title" 
			type="text"
			class="input-xxlarge input-large-text"
			label="COM_QAZAP_FORM_LBL_CARTATTRIBUTESTYPE_TITLE"
			description="COM_QAZAP_FORM_DESC_CARTATTRIBUTESTYPE_TITLE" 
			required="true" 
			filter="raw"/> 

		<field 
			name="show_title" 
			type="radio" 
			class="btn-group" 
			default="1"
			label="COM_QAZAP_FORM_LBL_CARTATTRIBUTESTYPE_SHOW_TITLE"
			description="COM_QAZAP_FORM_DESC_CARTATTRIBUTESTYPE_SHOW_TITLE">
				<option value="1">JYES</option>
				<option value="0">JNO</option>
		</field> 

		<field 
			name="description" 
			type="editor"
			label="COM_QAZAP_FORM_LBL_CARTATTRIBUTESTYPE_DESCRIPTION"
			description="COM_QAZAP_FORM_DESC_CARTATTRIBUTESTYPE_DESCRIPTION" /> 

		<field 
			name="tooltip" 
			type="text"
			label="COM_QAZAP_FORM_LBL_CARTATTRIBUTESTYPE_TOOLTIP"
			description="COM_QAZAP_FORM_DESC_CARTATTRIBUTESTYPE_TOOLTIP"/>

		<field 
			name="hidden" 
			type="radio" 
			class="btn-group" 
			default="0"
			label="COM_QAZAP_FORM_LBL_CARTATTRIBUTESTYPE_HIDDEN"
			description="COM_QAZAP_FORM_DESC_CARTATTRIBUTESTYPE_HIDDEN">
				<option value="1">JYES</option>
				<option value="0">JNO</option>
		</field>
		
		<field 
			name="check_stock" 
			type="radio" 
			class="btn-group" 
			default="1"
			label="COM_QAZAP_FORM_LBL_CARTATTRIBUTESTYPE_SHOW_CHECKSTOCK"
			description="COM_QAZAP_FORM_DESC_CARTATTRIBUTESTYPE_SHOW_CHECKSTOCK">
				<option value="1">JYES</option>
				<option value="0">JNO</option>
		</field> 

		<field 
			name="params" 
			type="hidden" /> 

		<field
			name="state"
			type="radio" class="btn-group"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC"
			default="1">
				<option value="1">JPUBLISHED</option>
				<option value="0">JUNPUBLISHED</option>
		</field>
		
		<field 
			name="created_by" 
			type="user" 
			label="JGLOBAL_CREATED_BY_LABEL"
			description="JGLOBAL_CREATED_BY_DESC"  />
		
		<field
			name="created_time"
			type="text"
			label="JGLOBAL_CREATED_DATE"
			class="readonly"
			filter="unset"
			readonly="true" />
		
		<field
			name="modified_time"
			type="text"
			label="JGLOBAL_FIELD_MODIFIED_LABEL"
			class="readonly"
			filter="unset"
			readonly="true" />
		
		<field
			name="modified_by"
			type="user"
			label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
			class="readonly"
			readonly="true"
			filter="unset"/>
		
		<field
			name="checked_out"
			type="hidden"
			filter="unset"/>

		<field
			name="checked_out_time"
			type="hidden"
			filter="unset"/>

	</fieldset>

</form>
