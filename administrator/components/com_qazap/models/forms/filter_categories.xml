<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter">
		<field
			name="search"
			type="text"
			label="COM_QAZAP_ITEMS_SEARCH_FILTER"
			hint="JSEARCH_FILTER"
			class="js-stools-search-string"
		/>
		<field
			name="level"
			type="integer"
			first="1"
			last="10"
			step="1"
			label="JOPTION_FILTER_LEVEL"
			languages="*"
			description="JOPTION_FILTER_LEVEL_DESC"
			onchange="this.form.submit();"
			>
			<option value="">JOPTION_SELECT_MAX_LEVELS</option>
		</field>
		<field
			name="published"
			type="list"
			label="COM_QAZAP_FILTER_PUBLISHED"
			description="COM_CQAZAP_FILTER_PUBLISHED_DESC"
			onchange="this.form.submit();"
			>
			<option value="*">JOPTION_SELECT_PUBLISHED</option>
			<option value="1">COM_QAZAP_FILTER_PUBLISHED</option>
			<option value="0">COM_QAZAP_FILTER_UNPUBLISHED</option>
		</field>
		<field
			name="access"
			type="accesslevel"
			label="JOPTION_FILTER_ACCESS"
			description="JOPTION_FILTER_ACCESS_DESC"
			onchange="this.form.submit();"
			>
			<option value="">JOPTION_SELECT_ACCESS</option>
		</field>
	</fields>
	<fields name="list">
		<field
			name="fullordering"
			type="list"
			label="JGLOBAL_SORT_BY"
			description="JGLOBAL_SORT_BY"
			onchange="this.form.submit();"
			default="a.lft ASC"
			>
			<option value="">JGLOBAL_SORT_BY</option>
			<option value="a.id ASC">COM_QAZAP_EMAILS_ID_ASCENDING</option>
			<option value="a.id DESC">COM_QAZAP_EMAILS_ID_DESCENDING</option>
			<option value="a.ordering ASC">COM_QAZAP_EMAILS_ORDERING_ASCENDING</option>
			<option value="a.ordering DESC">COM_QAZAP_EMAILS_ORDERING_DESCENDING</option>
			<option value="a.name ASC">COM_QAZAP_EMAILS_NAME_ASCENDING</option>
			<option value="a.name DESC">COM_QAZAP_EMAILS_NAME_DESCENDING</option>
			<option value="a.subject ASC">COM_QAZAP_EMAILS_SUBJECT_ASCENDING</option>
			<option value="a.subject DESC">COM_QAZAP_EMAILS_SUBJECT_DESCENDING</option>
			<option value="a.default ASC">COM_QAZAP_EMAILS_DEFAULT_ASCENDING</option>
			<option value="a.default DESC">COM_QAZAP_EMAILS_DEFAULT_DESCENDING</option>
			<option value="a.purpose ASC">COM_QAZAP_EMAILS_PURPOSE_ASCENDING</option>
			<option value="a.purpose DESC">COM_QAZAP_EMAILS_PURPOSE_DESCENDING</option>
			
			
		</field>
		<field
			name="limit"
			type="limitbox"
			class="inputbox input-mini"
			default="25"
			label="COM_CATEGORIES_LIST_LIMIT"
			description="COM_CATEGORIES_LIST_LIMIT_DESC"
			format="%Y-%m-%d %H:%M:%S"
			onchange="this.form.submit();"
		/>
	</fields>
</form>
