<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>

		<field 
			name="id" 
			type="hidden" 
			default="0" 
			label="COM_QAZAP_FORM_LBL_PRODUCTUOM_ID"
			readonly="true" 
			class="readonly"
			description="JGLOBAL_FIELD_ID_DESC" /> 

		<field 
			name="product_attributes" 
			type="list"
			label="COM_QAZAP_FORM_LBL_PRODUCTUOM_PRODUCT_ATTRIBUTES"
			description="COM_QAZAP_FORM_DESC_PRODUCTUOM_PRODUCT_ATTRIBUTES" 
			filter="raw">
			<option value="length">Length</option>
			<option value="weight">Weight</option>
			<option value="package">Packaging</option>
		</field> 

		<field 
			name="product_measure_unit_name" 
			type="text" 
			required="required"
			label="COM_QAZAP_FORM_LBL_PRODUCTUOM_PRODUCT_MEASURE_UNIT_NAME"
			description="COM_QAZAP_FORM_DESC_PRODUCTUOM_PRODUCT_MEASURE_UNIT_NAME"
			class="input-xxlarge input-large-text"
			hint="Enter Unit Name" 
			filter="raw" /> 
		
		<field 
			name="product_measure_unit" 
			type="text"
			required="required"
			label="COM_QAZAP_FORM_LBL_PRODUCTUOM_PRODUCT_MEASURE_UNIT"
			description="COM_QAZAP_FORM_DESC_PRODUCTUOM_PRODUCT_MEASURE_UNIT" 
			filter="raw" /> 
		
		<field 
			name="exchange_rate" 
			type="text"
			required="required"
			label="COM_QAZAP_FORM_LBL_PRODUCTUOM_EXCHANGE_RATE"
			description="COM_QAZAP_FORM_DESC_PRODUCTUOM_EXCHANGE_RATE" 
			filter="raw" /> 

		<field
			name="state"
			type="list"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC"
			class="chzn-color-state"
			size="1"
			default="1">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
		</field>
		
		<field 
			name="created_by" 
			type="user" 
			label="JGLOBAL_CREATED_BY_LABEL"
			description="JGLOBAL_CREATED_BY_DESC"  />
		
		<field
			name="created_time"
			type="text"
			label="JGLOBAL_CREATED_DATE"
			class="readonly"
			filter="unset"
			readonly="true" />
		
		<field
			name="modified_time"
			type="text"
			label="JGLOBAL_FIELD_MODIFIED_LABEL"
			class="readonly"
			filter="unset"
			readonly="true" />
		
		<field
			name="modified_by"
			type="user"
			label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
			class="readonly"
			readonly="true"
			filter="unset"/>

	</fieldset>

</form>
