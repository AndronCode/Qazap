<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field 
			name="id" 
			type="text" 
			default="0" 
			label="COM_QAZAP_FORM_LBL_COUNTRY_ID"
			readonly="true" 
			class="readonly"
			description="JGLOBAL_FIELD_ID_DESC" /> 
		
		<field 
			name="country_name" 
			type="text"
			class="input-xxlarge input-large-text"
			hint="Enter Country Name"
			label="COM_QAZAP_FORM_LBL_COUNTRY_COUNTRY_NAME"
			description="COM_QAZAP_FORM_DESC_COUNTRY_COUNTRY_NAME" 
			required="true" 
			filter="raw" /> 
		
		<field 
			name="country_3_code" 
			type="text"
			class="input-xxlarge input-large-text"
			label="COM_QAZAP_FORM_LBL_COUNTRY_COUNTRY_3_CODE"
			description="COM_QAZAP_FORM_DESC_COUNTRY_COUNTRY_3_CODE" 
			filter="raw" /> 
		
		<field 
			name="country_2_code" 
			type="text"
			class="input-xxlarge input-large-text"
			label="COM_QAZAP_FORM_LBL_COUNTRY_COUNTRY_2_CODE"
			description="COM_QAZAP_FORM_DESC_COUNTRY_COUNTRY_2_CODE" 
			filter="raw" /> 
		
		<field
			name="state"
			type="list"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC"
			class="chzn-color-state"
			size="1"
			default="1">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
		</field>
		
		<field
			name="checked_out"
			type="hidden"
			filter="unset"/>

		<field
			name="checked_out_time"
			type="hidden"
			filter="unset"/>
			
		<field 
			name="created_by" 
			type="user" 
			label="JGLOBAL_CREATED_BY_LABEL"
			description="JGLOBAL_CREATED_BY_DESC"  />
		
		<field
			name="created_time"
			type="text"
			label="JGLOBAL_CREATED_DATE"
			class="readonly"
			filter="unset"
			readonly="true" />
		
		<field
			name="modified_time"
			type="text"
			label="JGLOBAL_FIELD_MODIFIED_LABEL"
			class="readonly"
			filter="unset"
			readonly="true" />
		
		<field
			name="modified_by"
			type="user"
			label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
			class="readonly"
			readonly="true"
			filter="unset"/>
	</fieldset>
</form>
